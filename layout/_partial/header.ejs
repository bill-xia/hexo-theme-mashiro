<header id="header">
  <div id="banner"></div>
  <div id="header-outer" class="outer">
    <div id="header-title" class="inner">
      <h1 id="logo-wrap">
        <a href="<%- url_for() %>" id="logo"><%= config.title.replace(/，/g, ', ').replace(/；/g, '; ').replace(/：/g, ': ').replace(/！/g, '! ').replace(/‘/g, '` ').replace(/’/g, "' ").replace(/“/g, ' “').replace(/”/g, "” ").replace(/（/g, '(').replace(/）/g, ')').replace(/。/g, '.  ') %></a>
      </h1>
      <% if (theme.subtitle || config.subtitle){ %>
        <h2 id="subtitle-wrap">
          <a href="<%- url_for() %>" id="subtitle"><%= (theme.subtitle || config.subtitle).replace(/，/g, ', ').replace(/；/g, '; ').replace(/：/g, ': ').replace(/！/g, '! ').replace(/‘/g, '` ').replace(/’/g, "' ").replace(/“/g, ' “').replace(/”/g, "” ").replace(/（/g, '(').replace(/）/g, ')').replace(/。/g, '.  ') %></a>
        </h2>
      <% } %>
    </div>
    <div id="header-inner" class="inner">
      <nav id="main-nav">
        <a id="main-nav-toggle" class="nav-icon"></a>
        <% for (var i in theme.menu){ %>
          <a class="main-nav-link" href="<%- url_for(theme.menu[i]) %>"><%= i %></a>
        <% } %>
      </nav>
    </div>
  </div>
</header>
